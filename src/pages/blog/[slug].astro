---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// SEO
const title = post.data.title;
const description = post.data.description;
const author = post.data.author;
const pubDate = post.data.pubDate.toLocaleDateString('es-CO');
---

<Layout title={title} description={description}>
  <!-- Article Container -->
    <article class="pt-32 pb-20 px-4 sm:px-6 lg:px-8 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm">
          <a href="/" class="text-blue-600 dark:text-blue-400 hover:underline">Inicio</a>
          <span class="mx-2 text-gray-400">/</span>
          <a href="/blog" class="text-blue-600 dark:text-blue-400 hover:underline">Blog</a>
          <span class="mx-2 text-gray-400">/</span>
          <span class="text-gray-600 dark:text-gray-300">{post.data.category}</span>
        </nav>

        <!-- Category Badge -->
        <div class="mb-4">
          <span class="inline-block px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 text-xs font-semibold rounded-full">
            {post.data.category}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
          {title}
        </h1>

        <!-- Metadata -->
        <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400 mb-8 pb-8 border-b border-gray-200 dark:border-gray-800">
          <span>{author}</span>
          <span>•</span>
          <time dateTime={post.data.pubDate.toISOString()}>
            {pubDate}
          </time>
          {post.data.readingTime && (
            <>
              <span>•</span>
              <span>{post.data.readingTime} min lectura</span>
            </>
          )}
        </div>

        <!-- Description -->
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-12">
          {description}
        </p>

        <!-- Content -->
        <div class="prose dark:prose-invert max-w-none mb-12">
          <Content />
        </div>

        <!-- Tags -->
        {post.data.tags && (
          <div class="border-t border-gray-200 dark:border-gray-800 pt-8">
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">TAGS</h3>
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map(tag => (
                <a 
                  href={`/blog?tag=${tag}`}
                  class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Author Card -->
        <div class="mt-12 p-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-900">
          <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Sobre el autor</h3>
          <p class="text-gray-700 dark:text-gray-300">
            {author} es Senior Data Engineer con 15+ años de experiencia en arquitecturas de datos y desarrollo web.
          </p>
        </div>

        <!-- Share -->
        <div class="mt-8 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <p class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Compartir artículo:</p>
          <div class="flex gap-3">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${Astro.request.url}`}
              target="_blank"
              class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-semibold"
            >
              Twitter
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.request.url)}`}
              target="_blank"
              class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-semibold"
            >
              LinkedIn
            </a>
            <a 
              href={`mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(description + '\n\n' + Astro.request.url)}`}
              class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-semibold"
            >
              Email
            </a>
          </div>
        </div>

        <!-- Navigation -->
        <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
          <a href="/blog" class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold">
            ← Volver al blog
          </a>
        </div>
      </div>
    </article>
  </main>

  <style>
    :global(.prose) {
      --tw-prose-body: rgb(55 65 81);
      --tw-prose-headings: rgb(17 24 39);
      --tw-prose-bold: rgb(17 24 39);
      --tw-prose-links: rgb(37 99 235);
      --tw-prose-code: rgb(17 24 39);
      --tw-prose-pre-bg: rgb(249 250 251);
      --tw-prose-pre-code: rgb(55 65 81);
    }

    :global(.dark .prose) {
      --tw-prose-body: rgb(209 213 219);
      --tw-prose-headings: rgb(243 244 246);
      --tw-prose-bold: rgb(243 244 246);
      --tw-prose-links: rgb(96 165 250);
      --tw-prose-code: rgb(243 244 246);
      --tw-prose-pre-bg: rgb(31 41 55);
      --tw-prose-pre-code: rgb(209 213 219);
    }
  </style>
</Layout>
